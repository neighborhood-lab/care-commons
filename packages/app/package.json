{
  "name": "@care-commons/app",
  "version": "0.1.0",
  "private": true,
  "//1": "════════════════════════════════════════════════════════════════",
  "//2": "⚠️  ESM PACKAGE - type:module + node:22.x required",
  "//3": "════════════════════════════════════════════════════════════════",
  "type": "module",
  "description": "Care Commons API server",
  "main": "dist/server.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:watch": "tsc --watch",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "build:vercel": "tsc -p tsconfig.vercel.json",
    "start": "node dist/server.js",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts --max-warnings 100 --ignore-pattern 'dist-vercel/**'"
  },
  "dependencies": {
    "@care-commons/billing-invoicing": "*",
    "@care-commons/care-plans-tasks": "*",
    "@care-commons/caregiver-staff": "*",
    "@care-commons/client-demographics": "*",
    "@care-commons/core": "*",
    "@care-commons/payroll-processing": "*",
    "@care-commons/scheduling-visits": "*",
    "@care-commons/shift-matching": "*",
    "@care-commons/time-tracking-evv": "*",
    "@types/compression": "^1.8.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
