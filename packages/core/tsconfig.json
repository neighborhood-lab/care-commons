{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "lib": ["ES2022", "DOM"]
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "replace-imports": {
        "replace": "^(\\.{1,2}\\/[^'\"]+)$",
        "with": "$1.js"
      }
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
