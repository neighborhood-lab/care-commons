{
  "name": "@care-commons/core",
  "version": "0.1.0",
  "//1": "════════════════════════════════════════════════════════════════",
  "//2": "⚠️  CORE ESM PACKAGE - DO NOT CHANGE type:module",
  "//3": "════════════════════════════════════════════════════════════════",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./demo": {
      "types": "./dist/demo/index.d.ts",
      "import": "./dist/demo/index.js",
      "default": "./dist/demo/index.js"
    },
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.js",
      "default": "./dist/sync/index.js"
    }
  },
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "tsc --composite false && tsc-alias -p tsconfig.json",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts --max-warnings 0 && npm run lint:sql",
    "lint:sql": "sql-lint --driver postgres migrations/*.sql || echo 'SQL lint completed'",
    "db:migrate": "cd ../.. && tsx packages/core/scripts/migrate.ts",
    "db:migrate:rollback": "cd ../.. && tsx packages/core/scripts/rollback.ts",
    "db:migrate:status": "cd ../.. && tsx packages/core/scripts/migrate-status.ts",
    "db:seed": "cd ../.. && tsx packages/core/scripts/seed.ts",
    "db:seed:demo": "cd ../.. && tsx packages/core/scripts/seed-demo-complete.ts",
    "db:seed:demo-v2": "cd ../.. && tsx packages/core/scripts/seed-demo-v2.ts",
    "db:seed-users": "cd ../.. && tsx packages/core/scripts/seed-users.ts",
    "db:set-admin-password": "cd ../.. && tsx packages/core/scripts/set-admin-password.ts",
    "db:nuke": "cd ../.. && tsx packages/core/scripts/nuke.ts"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "date-fns": "^4.1.0",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^2.3.1",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.7",
    "eslint": "^9.39.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
