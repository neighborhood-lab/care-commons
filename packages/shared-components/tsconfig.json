{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "replace-imports": {
        "replace": "^(\\.\\.?\\/[^'\"]+?)(\\.ts)?$",
        "with": "$1.js"
      }
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
