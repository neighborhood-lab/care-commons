{
  "dashboard": {
    "title": "Care Commons - Production Overview",
    "uid": "care-commons-overview",
    "tags": ["care-commons", "production"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "up{job=\"care-commons-api\"}",
            "legendFormat": "API Status",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 9,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "requests/sec",
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": false
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {
          "x": 15,
          "y": 0,
          "w": 4,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "gridPos": {
          "x": 19,
          "y": 0,
          "w": 5,
          "h": 4
        },
        "targets": [
          {
            "expr": "active_users",
            "legendFormat": "Active Users",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Response Time (p50, p95, p99)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "seconds",
            "format": "s"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "max": true,
          "current": true
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [2],
                "type": "gt"
              },
              "query": {
                "params": ["B", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "Response Time p95 alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"2..\"}[5m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "requests/sec",
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "total": true,
          "current": true
        }
      },
      {
        "id": 7,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 10,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "seconds",
            "format": "s"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 8,
        "title": "Visit Operations",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 10,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(visits_created_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "visits/sec",
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "total": true
        }
      },
      {
        "id": 9,
        "title": "Mobile Sync Success vs Failure",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "rate(mobile_sync_success_total[5m])",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "rate(mobile_sync_failure_total[5m])",
            "legendFormat": "Failure",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "syncs/sec",
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "total": true,
          "current": true
        }
      },
      {
        "id": 10,
        "title": "Request Rate by Route (Top 10)",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total[5m]))",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "requests/sec",
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "rightSide": false
        }
      },
      {
        "id": 11,
        "title": "SLA - Uptime (99.5% target)",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 22,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "(1 - (rate(http_requests_total{status_code=~\"5..\"}[1h]) / rate(http_requests_total[1h]))) * 100",
            "legendFormat": "Uptime %",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 99.5,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Mobile Sync Failure Rate",
        "type": "stat",
        "gridPos": {
          "x": 8,
          "y": 22,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(mobile_sync_failure_total[5m]) / (rate(mobile_sync_success_total[5m]) + rate(mobile_sync_failure_total[5m])) * 100",
            "legendFormat": "Failure Rate %",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 5,
                  "color": "yellow"
                },
                {
                  "value": 10,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Total Requests (24h)",
        "type": "stat",
        "gridPos": {
          "x": 16,
          "y": 22,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "increase(http_requests_total[24h])",
            "legendFormat": "Total Requests",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      }
    ]
  }
}
