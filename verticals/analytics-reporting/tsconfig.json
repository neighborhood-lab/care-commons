{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**"],
  "references": [
    { "path": "../../packages/core" }
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false,
    "replacers": {
      "pathsToModuleNameMapper": [
        {
          "pattern": "^(\\.{1,2}\\/[^'\"]+)$",
          "replace": "$1.js"
        }
      ]
    }
  }
}
