{
  "name": "@care-commons/platform",
  "version": "0.1.0",
  "private": true,
  "description": "Shared care software, community owned",
  "workspaces": [
    "packages/*",
    "verticals/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:migrate": "cd packages/core && npm run db:migrate",
    "db:seed": "cd packages/core && npm run db:seed",
    "db:seed:billing": "cd packages/core && npx ts-node scripts/seed-billing.ts"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
