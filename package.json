{
  "name": "@care-commons/platform",
  "version": "0.1.0",
  "private": true,
  "//": "════════════════════════════════════════════════════════════════",
  "//1": "⚠️  CRITICAL CONFIGURATION - DO NOT CHANGE",
  "//2": "type:module = Required for ESM (deployment fails without)",
  "//3": "node:22.x = Required for Vercel serverless runtime",
  "//4": "See: ESM_ARCHITECTURE.md, TYPESCRIPT_CONFIG.md",
  "//": "════════════════════════════════════════════════════════════════",
  "type": "module",
  "description": "Shared care software, community owned",
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "packages/*",
    "verticals/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@care-commons/app --filter=@care-commons/web",
    "dev:server": "cd packages/app && npm run dev",
    "dev:web": "cd packages/web && npm run dev",
    "build": "turbo run build",
    "build:ts": "tsc -b",
    "start": "cd packages/app && npm run start",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run build && tsc -b",
    "db:migrate": "cd packages/core && npm run db:migrate",
    "db:migrate:rollback": "cd packages/core && npm run db:migrate:rollback",
    "db:migrate:status": "cd packages/core && npm run db:migrate:status",
    "db:seed": "cd packages/core && npm run db:seed",
    "db:seed:billing": "cd packages/core && node --import tsx --no-warnings scripts/seed-billing.ts",
    "db:seed:demo": "cd packages/core && node --import tsx --no-warnings scripts/seed-tx-fl-demo.ts",
    "db:nuke": "cd packages/core && npm run db:nuke",
    "deploy:staging": "vercel --env NODE_ENV=staging --env DATABASE_URL=$STAGING_DATABASE_URL",
    "deploy:production": "vercel --prod --env NODE_ENV=production --env DATABASE_URL=$DATABASE_URL",
    "deploy:preview": "vercel",
    "vercel:build": "npm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.6",
    "dotenv-cli": "^11.0.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "snyk": "^1.1300.2",
    "sql-lint": "^1.0.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=11.6.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.6"
  }
}
