{
  "name": "@care-commons/platform",
  "version": "0.1.0",
  "private": true,
  "//1": "════════════════════════════════════════════════════════════════",
  "//2": "⚠️  CRITICAL CONFIGURATION - DO NOT CHANGE",
  "//3": "type:module = Required for ESM (deployment fails without)",
  "//4": "node:22.x = Required for Vercel serverless runtime",
  "//5": "See: ESM_ARCHITECTURE.md, TYPESCRIPT_CONFIG.md",
  "//6": "════════════════════════════════════════════════════════════════",
  "type": "module",
  "license": "AGPL-3.0",
  "description": "Shared care software, community owned",
  "packageManager": "npm@10.9.4",
  "workspaces": [
    "packages/*",
    "verticals/*",
    "showcase"
  ],
  "scripts": {
    "dev:setup": "tsx scripts/dev-setup.ts",
    "dev": "tsx scripts/dev-server.ts",
    "dev:kill": "./scripts/dev-kill.sh",
    "dev:test": "./scripts/test-dev-workflow.sh",
    "dev:server": "cd packages/app && npm run dev",
    "dev:web": "cd packages/web && npm run dev",
    "dev:showcase": "cd showcase && npm run dev",
    "docker:up": "docker-compose up -d",
    "docker:up:tools": "docker-compose --profile tools up -d",
    "docker:down": "docker-compose down",
    "docker:down:volumes": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "dev:clean": "turbo run clean && rm -rf node_modules",
    "build": "turbo run build --filter=!@care-commons/showcase && npm run build:copy-web",
    "build:web": "cd packages/web && npm run build",
    "build:copy-web": "cp -r packages/web/dist/* public/",
    "build:ts": "tsc -b",
    "build:cloudflare": "npm run build && wrangler deploy --dry-run",
    "start": "cd packages/app && npm run start",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "lint": "turbo run lint",
    "typecheck": "turbo run build && tsc -b",
    "db:migrate": "cd packages/core && npm run db:migrate",
    "db:migrate:rollback": "cd packages/core && npm run db:migrate:rollback",
    "db:migrate:status": "cd packages/core && npm run db:migrate:status",
    "db:seed": "cd packages/core && npm run db:seed",
    "db:seed:demo": "cd packages/core && npm run db:seed:demo",
    "db:reset": "npm run db:nuke && npm run db:migrate && npm run db:seed",
    "db:reset:demo": "npm run db:nuke && npm run db:migrate && npm run db:seed && npm run db:seed:demo && npm run cache:clear",
    "db:nuke": "cd packages/core && npm run db:nuke",
    "cache:clear": "tsx scripts/clear-cache.ts",
    "db:env": "./scripts/db-env.sh",
    "db:env:preview": "./scripts/db-env.sh migrate --env=preview",
    "db:env:production": "./scripts/db-env.sh migrate --env=production",
    "docs:generate": "tsx scripts/export-postman-collection.ts",
    "deploy:staging": "vercel --env NODE_ENV=staging --env DATABASE_URL=$STAGING_DATABASE_URL",
    "deploy:production": "vercel --prod --env NODE_ENV=production --env DATABASE_URL=$DATABASE_URL",
    "deploy:preview": "vercel",
    "deploy:rollback": "tsx scripts/rollback-deployment.ts",
    "deploy:cloudflare:staging": "wrangler deploy --env staging",
    "deploy:cloudflare:production": "wrangler deploy --env production",
    "deploy:cloudflare:pages": "wrangler pages deploy packages/web/dist --project-name=care-commons",
    "predeploy": "tsx scripts/pre-deploy-checks.ts",
    "test:e2e:server": "tsx scripts/e2e-server.ts",
    "test:smoke": "playwright test e2e/tests/smoke.spec.ts",
    "vercel:build": "npm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@cloudflare/workers-types": "^4.20251113.0",
    "@expo/config-plugins": "^54.0.2",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@types/express-rate-limit": "^6.0.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.8",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "openapi-to-postmanv2": "^5.4.0",
    "patch-package": "^8.0.1",
    "sql-lint": "^1.0.2",
    "supabase": "^2.58.5",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8",
    "wrangler": "^4.47.0"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=10.9.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.8",
    "express-rate-limit": "^8.2.1",
    "rate-limit-redis": "^4.2.3",
    "react-joyride": "^3.0.0-7",
    "redis": "^5.9.0",
    "resend": "^6.4.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.27.0",
    "@rollup/rollup-linux-x64-gnu": "4.53.2",
    "@tailwindcss/oxide-linux-x64-gnu": "4.1.17",
    "lightningcss-linux-x64-gnu": "1.30.2"
  },
  "overrides": {
    "@types/express": "^5.0.5",
    "express": "^5.1.0"
  }
}
