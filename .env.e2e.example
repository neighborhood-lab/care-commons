# E2E Testing Environment Variables
# Copy this file to .env.e2e and fill in the values for local E2E testing

# Database Configuration
E2E_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/care_commons_e2e_test
E2E_DATABASE_NAME=care_commons_e2e_test

# Application URLs
E2E_BASE_URL=http://localhost:3000

# JWT Secrets (MUST be at least 32 characters)
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-32-char-min-secret-for-access-tokens-here-replace-me
JWT_REFRESH_SECRET=your-32-char-min-secret-for-refresh-tokens-here-replace-me

# Test Configuration
E2E_DROP_DATABASE=false  # Set to 'true' to drop database after tests (not recommended)
NODE_ENV=test

# CI Configuration (auto-detected in GitHub Actions)
CI=false
